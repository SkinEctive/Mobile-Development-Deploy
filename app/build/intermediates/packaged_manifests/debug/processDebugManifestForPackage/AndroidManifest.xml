            android:name="com.skinective.ui.ResultActivity"
            android:exported="false" />
        <activity
            android:name="com.skinective.ui.DetectActivity"
            android:exported="false" />
        <activity
            android:name="com.skinective.ui.SignUpActivity"
            android:exported="true" />
        <activity
            android:name="com.skinective.ui.SignInActivity"
            android:exported="true" />
        <activity
            android:name="com.google.android.libraries.places.widget.AutocompleteActivity"
            android:exported="false"
            android:label="@string/places_autocomplete_label"
            android:theme="@style/PlacesAutocompleteOverlay"
