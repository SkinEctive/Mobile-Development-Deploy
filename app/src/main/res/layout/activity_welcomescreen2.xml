<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/groupStyleWelcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/wave_image1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/wave_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_img3scr2" />

    <ImageView
        android:id="@+id/wave_image2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/wave_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.834" />

    <TextView
        android:id="@+id/tv_titlescreen2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:fontFamily="@font/nunitosans_10ptblack"
        android:gravity="center"
        android:text="@string/empowering_skin_health"
        android:textColor="@color/gigas980"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_img1scr2"
        android:layout_width="116dp"
        android:layout_height="131dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_1_scr2"
        app:layout_constraintEnd_toStartOf="@+id/tv_headline1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_titlescreen2" />

    <TextView
        android:id="@+id/tv_headline1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/nunitosans_10ptextrabold"
        android:gravity="center"
        android:text="@string/welcomescr2_headline1"
        android:textColor="@color/gigas700"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_img1scr2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_img1scr2"
        app:layout_constraintTop_toTopOf="@+id/iv_img1scr2" />

    <ImageView
        android:id="@+id/iv_img2scr2"
        android:layout_width="116dp"
        android:layout_height="131dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_2_scr2"
        app:layout_constraintEnd_toStartOf="@+id/tv_headline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_img1scr2" />

    <TextView
        android:id="@+id/tv_headline2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/nunitosans_10ptextrabold"
        android:gravity="center"
        android:text="@string/welcomescr2_headline2"
        android:textColor="@color/gigas700"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_img2scr2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_img2scr2"
        app:layout_constraintTop_toTopOf="@+id/iv_img2scr2" />

    <ImageView
        android:id="@+id/iv_img3scr2"
        android:layout_width="116dp"
        android:layout_height="131dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_3_scr2"
        app:layout_constraintEnd_toStartOf="@+id/tv_headline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_img2scr2" />

    <TextView
        android:id="@+id/tv_headline3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/nunitosans_10ptextrabold"
        android:gravity="center"
        android:text="@string/welcomescr2_headline3"
        android:textColor="@color/gigas700"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_img3scr2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_img3scr2"
        app:layout_constraintTop_toTopOf="@+id/iv_img3scr2" />

</androidx.constraintlayout.widget.ConstraintLayout>
